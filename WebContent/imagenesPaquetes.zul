							<template name="model">
								<row sclass="row_grid">
									<div zclass="div_content_columnas">
										<div zclass="div_content_col2">
											<div visible="@bind(each.galeria1.visible)" 
												zclass="@load(each.galeria1.style_Select)"
												onClick="@command('cambiosEnImagenPaquete',galeria4=each,galeria=each.galeria1)">
												<image src="@bind(each.galeria1.cRutaImagen)" width="100%" height="150px"/>
												<div zclass="div_eliminar_imagen">
													<button iconSclass="fa fa-trash"
														onClick="@command('eliminarImagenGaleriaPaquete',galeria4=each,galeria=each.galeria1,comp=self)"
